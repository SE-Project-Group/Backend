<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="model.Follow" table="follow">
		<composite-id >  
            <key-property name="userId" type="int" column="userId"></key-property>  
           <key-property name="followId" type="int" column="followId"></key-property>  
     </composite-id>
		<property name="isFriend" type="int">
			<column name="isFriend" />
		</property>

	</class>
</hibernate-mapping>
